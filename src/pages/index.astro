---
import Layout from '../layouts/Layout.astro';
import Project from '../components/Project.astro';
import ProjectDetail from '../components/ProjectDetail.astro';

const startCareer = 2022;
const experience = new Date().getFullYear() - startCareer;
---

<Layout title="Portfolio Ruth Siregar">
	<main>
		<!--================ Start Home Banner Area =================-->
		<section class="home_banner_area d-xl-flex align-items-xl-center" id="home">
			<div class="banner_inner">
				<div class="container">
					<div class="row">
						<div class="col-lg-8">
							<div class="banner_content">
								<h3 class="text-uppercase mb-2">Hello</h3>
								<h1 class="text-uppercase my-0">I am Ruth Siregar</h1>
								<h5 class="text-uppercase">Full Stack Developer & Mobile Developer</h5>
								<div class="d-flex align-items-center">
									<a class="primary_btn" href="#contact"><span>Get In Touch</span></a>
								</div>
							</div>
						</div>
						<div class="col-lg-4">
							<div class="profile_img">
								<img class="img-fluid" src="../public/img/banner/home-right.png" alt="">
							</div>
						</div>
					</div>
				</div>
			</div>
			
		</section>
		<!--================ End Home Banner Area =================-->

		<!--================ Start About Us Area =================-->
		<section class="about_area d-xl-flex align-items-xl-center" id="about">
			<div class="container">
				<div class="row justify-content-start">
					<div class="col-lg-5">
						<div class="about_img">
							<img src="../public/img/about-us.png" alt="">
						</div>
					</div>

					<div class="offset-lg-1 col-lg-5">
						<div class="main_title text-left">
							<h2>letâ€™s <br>
								Introduce about <br>
								myself</h2>
							<p>
								Love to learn something new and easy going. Experienced in {experience}+ years being programmer, I have working on variety project website, apps, and games. 
							</p>
							<a class="primary_btn" target="_blank" href="https://drive.google.com/file/d/1v36OOtjwNJFgfycSKxBiy_O_WN3WHF-G/view?usp=sharing"><span>Download CV</span></a>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!--================ End About Us Area =================-->

		<!--================ Start Projects Area =================-->
		<section class="projects_area pb-5" id="projects">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-lg-8 text-center">
						<div class="main_title">
							<h2>Projects</h2>
						</div>
					</div>
				</div>

				<div class="row">

					<Project 
						title="CAIS" 
						img="../public/img/portfolio/CAIS.jpg"
						about="Developed a web-based platform to connect partner companies with alumni, featuring job listings, partner directories, and alumni career tracking. Led a small team as a Scrum Master and developer, ensuring a scalable and user-friendly system using Laravel and Agile (Scrum)."
						stacks= {["PHP","HTML","CSS","JavaScript","Bootstrap","Postman", "REST API", "Coda", "GitHub", "Android Studio", "Kotlin" ,"MySQL"]}
						website="https://ppkha.del.ac.id/"
						github="https://github.com/mitsuha19/SI-PPKHA"
					/>

					<Project 
						title="SuFi One (intern program)" 
						img="../public/img/portfolio/SuFiOne.jpg"
						about="LMS websites focus on certain segments, for example one that is already running is for teachers. There are also Event and Blog features."
						stacks= {["PHP","HTML","CSS","JavaScript","Bootstrap","jQuery","Vuejs","Slim","Medoo","MySQL"]}
						website="-"
						github="Tidak untuk publik"
					/>

					<Project 
						title="SMAN1 BALIGE WEBSITE DEVELOPMENT" 
						img="../public/img/portfolio/sman1-balige.png"
						about="Led the development of a comprehensive school website for SMAN 1 Balige as part of a university-wide community service project. Utilized Laravel framework to create a dynamic and informative platform for students, parents, and staff. "
						stacks= {["HTML","CSS","Laravel","Bootstrap","MySQL"]}
						website="https://pkm.sman1balige.delcom.org/"
						github="https://github.com/delcom-itdel/pabwe-pkm-proyek-2024-k4"
					/>

					<Project 
						title="Ngekost" 
						img="../public/img/portfolio/ngekost.png"
						about="Ngekos is a modern and full-featured boarding house (kos-kosan) web platform built with Laravel 11, Filament, and Midtrans. It allows users to search for high-quality accommodations by city and category, view detailed room info, and choose flexible payment options (DP or full payment). Users can fill out personal data, select their check-in date, and pay securely via Midtrans. Admins manage cities, categories, rooms, facilities, bookings, and user testimonials via a powerful Filament dashboard."
						stacks= {["PHP","HTML","CSS","JavaScript","Bootstrap","Laravel","Filament","MySQL"]}
						website="-"
						github="https://github.com/twinklestar-o/proyek-kost"
					/>

					<Project 
						title="Dice Game" 
						img="../public/img/portfolio/dice.png"
						about="A simple JavaScript project that demonstrates how to dynamically replace an HTML element with a new one"
						stacks= {["HTML","CSS","JavaScript"]}
						website="https://github.com/twinklestar-o/dice-challenge"
						github=""
					/>

					<Project 
						title="Virtual Drum Kit" 
						img="../public/img/portfolio/virtual-drum-kit.png"
						about="An interactive web application that simulates a drum set, allowing users to play various drum sounds using either mouse clicks or keyboard presses. Built with HTML, CSS, and JavaScript, the project showcases the power of JavaScript in creating engaging and responsive web experiences."
						stacks= {["HTML","CSS","JavaScript"]}
						website="https://github.com/twinklestar-o/virtual-drum-kit"
						github=""
					/>
					
				</div>

			</div>
		</section>
		<!--================ End Projects Area =================-->

		<!--================ Start Contact Area =================-->
		<section class="contact-area" id="contact">
			<div class="container">
				<div class="row justify-content-center align-items-center">
					<div class="col-12 col-sm-12 col-md-8">
						<div class="main_title">
							<h2>CONTACT ME </h2>
						</div>

						<div class="card p-4 shadow border-0">
							<form id="gform" method="POST" action="https://script.google.com/macros/s/AKfycbxyvFqetMIZwdUTU2dw_vwYnVYcGrlTOEDIfBE5/exec">
								<div class="form-group">
									<label for="name">Email:</label>
									<input id="form-email" class="form-control col-12" placeholder="Enter Your Email" type="email" name="email" required>
								</div>
	
								<div class="form-group">
									<label for="name">Name:</label>
									<input id="form-name" class="form-control col-12" placeholder="Enter Your Name" type="text" name="name" required>
								</div>
	
								<div class="form-group">
									<label for="name">Message:</label>
									<textarea id="form-message" class="form-control col-12" placeholder="Enter Your Message" rows="8" name="message" required></textarea>
								</div>
	
								<button class="primary_btn float-right mt-1 btn-block" type="submit">
									<span>Send Message</span>
								</button>
							</form>
						</div>
						
					</div>
				</div>
			</div>
		</section>
		<!--================ End Newsletter Area =================-->
		
		<ProjectDetail />
	</main>
</Layout>

